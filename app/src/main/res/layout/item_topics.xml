<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="topic"
            type="divyansh.tech.wallup.onboarding.datamodels.TopicsItem"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape_outline"
        android:layout_margin="@dimen/spacing_small_16dp"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/primaryText"
            android:textSize="@dimen/font_normal"
            android:text="@{topic.title}"
            tools:text="Wallpapers"
            android:layout_margin="@dimen/size_normal"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>